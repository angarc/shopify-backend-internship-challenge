<h1 class='page-title'><%= @photo.title %></h1>

<div class='row mt-3'>
  <div class='col-lg-8'>
    <%= image_tag(url_for(@photo.image), width: '100%') %> 
    <p class='mt-3'><%= @photo.description %></p>
  </div> 
  <div class='col-lg-4'>
    <h3>Settings</h3>
    <hr/>
    <%= link_to 'Edit Photo', edit_dashboard_photo_path(@photo) %><br/>
    <%= link_to 'Delete Photo', 
                dashboard_photo_path(@photo), 
                method: :delete, 
                data: {confirm: 'Are you sure?'} %>
    <h3 class='mt-3'>Share</h3>
    <hr/>
  </div>
</div>

