<div class='container'>
  <h1 class='page-title'><%= @photo.title %></h1>
  <p><strong>User: </strong> <%= link_to @photo.user.username, user_path(@photo.user) %></p>
  <div class='row'>
    <div class='col-xl-7 col-lg-12'>
      <%= image_tag url_for(@photo.image), width: '100%', class: 'photo-show-page__image' %>

      <p class='mt-3 photo-show-page__description'><%= @photo.description %></p>
    </div>

    <div class='col-xl-5 col-lg-12'>
      <h3 class='u-text-bold'>Share</h3> 
      <hr/>

      <div class='share-component' data-controller='clipboard'>
        <input class='share-component__input' data-target='clipboard.source' type="text" value="<%= photo_url(@photo) %>" readonly/>
        <button class='share-component__button' data-action="clipboard#copy">Copy</button>
      </div>
      <small id='notification'></small>
    </div>
  </div>
</div>
